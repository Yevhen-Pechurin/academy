<odoo>
    <record model="ir.module.category" id="module_category_demo">
        <field name="name">Demo</field>
    </record>

     <record id="group_demo_salesperson" model="res.groups">
        <field name="name">Salesperson</field>
        <field name="category_id" ref="module_category_demo"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

     <record id="group_demo_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_demo"/>
        <field name="implied_ids" eval="[(4, ref('group_demo_salesperson'))]"/>
    </record>

    <record model="res.users" id="base.user_admin">
        <field eval="[(4,ref('group_demo_manager'))]" name="groups_id"/>
    </record>
</odoo>
