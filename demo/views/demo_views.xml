<odoo>
    <data>
        <!-- explicit demo list view definition -->
        <record model="ir.ui.view" id="demo_list">
            <field name="name">demo list</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <!--                    <field name="partner_id"/>-->
                    <field name="date"/>
                    <!--                    <field name="state"/>-->
                </tree>
            </field>
        </record>

        <!-- form view for demo -->
        <record model="ir.ui.view" id="demo_form_view">
            <field name="name">demo.form.view</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <!--                <xpath expr="//sheet" position="before">-->
                <!--                    <header>-->
                <!--                        <button string="On Rent" class="oe_highlight"/>-->
                <!--                        <button string="In Garage" class="oe_highlight"/>-->
                <!--                        <field name="state" widget="statusbar" statusbar_visible="scheduled,in_progres,done,сanceled"/>-->
                <!--                    </header>-->
                <!--                </xpath>-->
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field class="o_text_overflow" name="name" placeholder="e.g. Name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Info" name="info">
                                <field name="user_id"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="date"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" id="description" class="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit demo kanban view definition -->
        <record model="ir.ui.view" id="demo_kanban_view">
            <field name="name">Demo Kanban</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" create="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card d-flex flex-column">
                                <div class="oe_kanban_content flex-grow-1">
                                    <div class="o_kanban_record_title oe_kanban_details">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div>
                                        Client:
                                        <field name="partner_id"/>
                                    </div>
                                    <div>
                                        Date:
                                        <field name="date"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!--         actions opening views on models -->
        <record model="ir.actions.act_window" id="demo_action_window">
            <field name="name">My Demo</field>
            <field name="res_model">demo.demo</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Demo" id="demo_menu_root">
            <menuitem name="All demo" id="demo_menu">
                <!-- menu categories -->
                <menuitem name="All" id="demo_menu_all" action="demo_action_window" sequence="1"/>
            </menuitem>
        </menuitem>

    </data>
</odoo>