<odoo>
    <data>

        <!-- Form view-->
        <record model="ir.ui.view" id="car_rental_car_form_view">
            <field name="name">demo.demo.form.view</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <form class="o_rental_car_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field class="o_text_overflow" name="name"/></h1>
                        </div>
                        <group>
                            <group string="Info" name="info">
                                <field name="salesperson"/>
                                <field name="date"/>
                                <field name="state"/>
                            </group>
                            <group string="Client">
                                <field name="partner_id" string="Client"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" id="description" class="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- explicit list view definition -->
        <record id="car_rental_car_view_tree" model="ir.ui.view">
            <field name="name">rental.car.tree</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <tree string="Cars" class="o_rental_car_view_tree">
                    <field name="name"/>
                    <field name="salesperson"/>
                    <field name="partner_id" string="Client"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="demo.action_window">
            <field name="name">demo window</field>
            <field name="res_model">demo.demo</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>


    </data>
</odoo>