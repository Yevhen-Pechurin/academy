        <menuitem id="menu_root" name="Demo" sequence = "20" />
        <menuitem id="demo" name = "Demo" parent = "menu_root" action="action_demo"/>
        <menuitem id="all_demos" name = "All Demos" parent = "demo" action="action_demo"/>
        <menuitem id="my_demos" name = "My Demos" parent = "demo" action="action_my_demo"/>
        <menuitem id="status" name = "Statuses" parent = "menu_root" action="action_status"/>
    </data>
</odoo>
