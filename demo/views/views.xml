<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="demo.list">
            <field name="name">All Demo</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                    <field name="saleperson" string="Salesperson"/>
                    <field name="partner_id" string="Client"/>
                    <field name="date" string="Date"/>
                    <field name="status" string="State"/>
                </tree>

            </field>
        </record>

<!--        <record model="ir.ui.view" id="demo.kanban_1">-->
<!--            <field name="name">All Demo</field>-->
<!--            <field name="model">demo.demo</field>-->
<!--            <field name="arch" type="xml">-->
<!--                <kanban>-->
<!--                    <field name="name" string="Name"/>-->
<!--                    <field name="partner_id" string="Client"/>-->
<!--                    <field name="date" string="Date"/>-->
<!--                </kanban>-->
<!--            </field>-->
<!--        </record>-->

        <record model="ir.ui.view" id="demo.demo_form_view">
            <field name="name">Demo</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <form context="{'default_saleperson': active_id}">
                    <header>

                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="saleperson"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="status"/>
                                <field name="date"/>
                                <!--                                <field name="user_id"/>-->
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_ids" options="{'post_refresh': 'recipients'}" groups="base.group_user"/>
                        <field name="message_follower_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="demo_search_view" model="ir.ui.view">
            <field name="name">demo search</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Group_status" name="group_by_status" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="demo.action_window">
            <field name="name">All Demo</field>
            <field name="res_model">demo.demo</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Demo_mod" id="demo.menu_root"/>
        <!-- menu categories -->
        <menuitem name="Menu 1" id="demo.menu_1" parent="demo.menu_root"/>

        <menuitem name="All Demo" id="demo.menu_1_list" parent="demo.menu_1"
                  action="demo.action_window"/>

    </data>
</odoo>