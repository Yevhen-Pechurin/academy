<odoo>
    <data>
        <record id="my_demoes_filter" model="ir.ui.view">
            <field name="name">demo.filter</field>
            <field name="model">demo.demo</field>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <search string="Search Opportunities">
                    <separator/>
                    <filter string="My Demoes"
                            domain="[('user_id', '=', uid)]" name="my_demoes"/>
                </search>
            </field>
        </record>

        <record id="my_demonstrations_action" model="ir.actions.act_window">
            <field name="name">Demonstrations</field>
            <field name="res_model">demo.demo</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('user_id', '=', uid)]</field>
        </record>

        <record id="demonstrations_action" model="ir.actions.act_window">
            <field name="name">Demonstrations</field>
            <field name="res_model">demo.demo</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="type">ir.actions.act_window</field>
<!--            <field name="context"> {'search_default_my_demoes': 1}</field>-->
        </record>

        <record id="demo_form_view" model="ir.ui.view">
            <field name="name">demo.form.view</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <form class="demo_form_view">
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group string="User and Partner info">
                            <field name="partner_id"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Demonstration info">
                            <field name="description"/>
                            <field name="date"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="demo_tree_view" model="ir.ui.view">
            <field name="name">demo.tree.view</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"></field>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>

        <record id="devo_kanban_view" model="ir.ui.view">
            <field name="name"> demo.kanban.view</field>
            <field name="model">demo.demo</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column o_kanban_mobile" archivable="false"
                        sample="1">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card d-flex flex-column"
                                 style="width:30mm; height:20mm;;">
                                <div class="oe_kanban_content flex-grow-1" style="display:flex;flex-direction:column;">
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="date"/>
                                </div>
                            </div>

                        </t>

                    </templates>
                </kanban>
            </field>
        </record>

        Extension of contacts for demoes
        <record id="extension_button_create_demoe" model="ir.ui.view">
            <field name="name">Extension</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button string="Create New Demo" class="oe_highlight" type="object" name="call_wizard_demo"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record id="extension_button_with_demoes" model="ir.ui.view">
            <field name="name">Extension</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- to insert your fields at the end of the list -->
                <xpath expr="//form/sheet/div[hasclass('oe_button_box')]" position="inside">
                    <button type="object" name="demo_get" icon="fa-desktop"
                            attrs="{'invisible': [('demoes_count', '=', 0)]}">
                        <field string="Demoes" name="demoes_count" widget="statinfo"></field>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>