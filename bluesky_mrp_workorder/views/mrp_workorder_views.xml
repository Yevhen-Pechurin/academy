<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_mrp_production_workorder_form_view_inherit" model="ir.ui.view">
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <field name="worksheet" position="replace">
                <field name="worksheet_old" widget="pdf_viewer"/>
            </field>
            <xpath expr='//notebook/page[1]' position="after">
                <page string="Product Specification" name="product_specification">
                    <field name="worksheet" widget="pdf_viewer"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>