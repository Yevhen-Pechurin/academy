<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.actions.act_window" id="action_car_report">
        <field name="name">Cars Report</field>
        <field name="res_model">rental.car.report</field>
        <field name="view_mode">pivot,graph</field>
    </record>

    <record id="car_pivot_view" model="ir.ui.view">
        <field name="name">rental.car.pivot</field>
        <field name="model">rental.car.report</field>
        <field name="arch" type="xml">
            <pivot string="Cars">
                <field name="car_id" type="col"/>
                <field name="client_id" type="row"/>
                <field name="max_odometer" type="measure"/>
            </pivot>
        </field>

    </record>
        <record id="car_graph_view" model="ir.ui.view">
        <field name="name">rental.car.pivot</field>
        <field name="model">rental.car.report</field>
        <field name="arch" type="xml">
            <graph string="Cars" type="line" sample="1">
                <field name="date_on_loan" interval="day"/>
                <field name="max_odometer" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>