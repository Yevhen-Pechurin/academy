<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_qrcode_car_template">
            <div style="width: 32%; display: inline-table; height: 10rem;">
                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                    <tr>
                        <th class="table-active text-left">
                            <strong t-field="car.display_name"/>
                        </th>
                    </tr>
                    <tr>
                    <td class="text-center align-middle">
                        <t t-if="car.name">
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %
                ('QR', car.name, 200, 200)" style="height: 10rem; width: 10rem;"/>
                            <span t-field="car.name"/>

<!--                            <div>-->
<!--                            <span t-field="car.name"/>-->
<!--                            </div>-->
<!--                            <div>-->
<!--                            <span t-field="car.number"/>-->
<!--                            </div>-->
<!--                            <div>-->
<!--                            <span t-field="car.year"/>-->
<!--                            </div>-->
                    </t>
                    <t t-else=""><span class="text-muted">No name available</span></t>
                    </td>
                   </tr>
                </table>
            </div>
    </template>

    <template id="report_qrcode_car">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="car">
                    <t t-call="rental.report_qrcode_car_template"/>
                </t>
            </div>
        </t>
    </template>
</odoo>