<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record model="ir.ui.view" id="form_view_wizard_in_repair">
    <field name="name">In Repair</field>
    <field name="model">rental.wizard.in_repair</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="type"/>
            </group>
            <group>
              <field name="description"/>
            </group>
          </group>
        </sheet>
        <footer>
          <button string="in Repair" name="action_in_repair" type="object" class="oe_highlight" data-hotkey="q"/>
          <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>