<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

  <record model="ir.ui.view" id="form_view_wizard_pass_to_client">
    <field name="name">Pass to Client</field>
    <field name="model">rental.wizard.pass_to_client</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="rentee_id"/>
            </group>
          </group>
        </sheet>
        <footer>
          <button string="Confirm" name="action_pass_car_to_client" type="object" class="oe_highlight" data-hotkey="q"/>
          <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
        </footer>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="form_view_wizard_pass_for_maintenance">
    <field name="name">Pass for Maintenance</field>
    <field name="model">rental.wizard.pass_for_maintenance</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="action"/>
            </group>
          </group>
        </sheet>
        <footer>
          <button string="Confirm" name="action_pass_car_for_maintenance" type="object" class="oe_highlight" data-hotkey="q"/>
          <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>