<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record model="ir.actions.act_window" id="action_wizard_on_loan">
    <field name="name">On Loan</field>
    <field name="res_model">rental.wizard.on_loan</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <record model="ir.ui.view" id="form_view_wizard_on_loan">
    <field name="name">On Loan</field>
    <field name="model">rental.wizard.on_loan</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="partner_id"/>
            </group>
            <group>
              <field name="date_on_loan"/>
            </group>
          </group>
        </sheet>
        <footer>
          <button string="On Loan" name="action_on_loan" type="object" class="oe_highlight" data-hotkey="q"/>
          <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>