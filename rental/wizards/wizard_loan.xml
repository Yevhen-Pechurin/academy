<odoo>
    <data>
        <record id="wizard_loan_form_view" model="ir.ui.view">
            <field name="name">wizard.on_hand.form.view</field>
            <field name="model">rental.wizard.loan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group><field name="partner_id"/></group>
                        <group><field name="due_date"/></group>
