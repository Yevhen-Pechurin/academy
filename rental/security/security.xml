<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_rental">
        <field name="name">Rental</field>
    </record>

    <record model="ir.module.category" id="module_category_rental_rental">
        <field name="name">Rental</field>
        <field name="parent_id" ref="module_category_rental"/>
    </record>

    <record id="group_rental_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_rental_rental"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_rental_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_rental_rental"/>
        <field name="implied_ids" eval="[(4, ref('group_rental_user'))]"/>
        <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>
</odoo>