<odoo>
    <data>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="car_list_view">
            <field name="name">rental list</field>
            <field name="model">rental.car</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- explicit kanban view definition -->
        <record model="ir.ui.view" id="car_kanban_view">
            <field name="name">Cars Kanban</field>
            <field name="model">rental.car</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" class="o_kanban_small_column" create="false">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="status"/>
                    <field name="image"/>
                    <field name="country_id"/>
                    <field name="partner_id"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card d-flex flex-column">
                                <div class="oe_kanban_content flex-grow-1">
                                    <div class="o_kanban_record_title oe_kanban_details">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <field name="model_id"/>
                                    </div>
                                    <div class="o_kanban_image">
                                        <img alt="Picture"
                                             t-att-src="kanban_image('rental.car', 'image', record.id.raw_value)"/>
                                    </div>
                                    <div>
                                        Country:
                                        <field name="country_id"/>
                                    </div>
                                    <div>
                                        Year:
                                        <field name="year"/>
                                    </div>
                                    <div>
                                        Mileage:
                                        <field name="mileage"/>
                                    </div>
                                    <div>
                                        <span class="o_text_overflow" t-if="record.partner_id.value"
                                              t-esc="record.partner_id.value"/>
                                    </div>
                                    <div>
                                        Due date:
                                        <field name="due_date"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- explicit search view definition -->
        <record model="ir.ui.view" id="car_search_view">
            <field name="name">rental search</field>
            <field name="model">rental.car</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"
                           filter_domain="['|', '|', ('name', 'ilike', self), ('model_id', 'ilike', self), ('description', 'ilike', self)]"/>
                    <field name="model_id"/>
                    <field name="partner_id" string="Client"/>
                    <filter name="active" string="Archive" domain="[('active','=',False)]"/>
                    <separator/>
                    <filter name="on_rent" string="On Rent" domain="[('status','=', 'on_rent')]"/>
                    <filter name="in_garage" string="In Garage" domain="[('status','=', 'in_garage')]"/>
                    <filter name="under_repair" string="Under Repair" domain="[('status','=', 'under_repair')]"/>
                    <filter name="group_status" string="Status" context="{'group_by':'status'}"/>
                </search>
            </field>
        </record>


        <!-- form view for cars -->
        <record model="ir.ui.view" id="car_info_form_view">
            <field name="name">car.form.view</field>
            <field name="model">rental.car.info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field class="o_text_overflow" name="name" placeholder="e.g. Opel"
                                       widget="my_custom_field"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Info" name="info">
                                <field name="model_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" id="description" class="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="car_form_view">
            <field name="name">cars.form.view</field>
            <field name="model">rental.car</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="rental.car_info_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_on_rent" string="On Rent" class="oe_highlight" type="object"
                                attrs="{'invisible': [('status', 'in', ['on_rent', 'unavailable'])]}"/>
                        <button name="action_in_garage" string="In Garage" class="oe_highlight" type="object"
                                attrs="{'invisible': [('status', 'in', ['in_garage', 'unavailable'])]}"/>
                        <button name="action_under_repair" string="Under Repair" class="oe_highlight" type="object"
                                attrs="{'invisible': [('status', 'in', ['under_repair', 'unavailable'])]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="on_rent,in_garage,under_repair"/>
                    </header>
                </xpath>
                <field name="model_id" position="before">
                    <field name="active" invisible="1"/>
                    <field name="number"/>
                    <field name="car_id" groups="base.group_no_one"/>
                </field>

                <xpath expr="//notebook/page[@id='description']" position="after">
                    <page string="Repair History">
                        <field name="repair_history_ids" options="{'no_open': True}">
                            <tree create="false" delete="false" edit="false" default_order="id desc">
                                <field name="partner_id"/>
                                <field name="date_under_repair"/>
                                <field name="date_in_garage"/>
                                <field name="due_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//notebook/page[@id='description']" position="after">
                    <page string="History">
                        <field name="history_ids" options="{'no_open': True}">
                            <tree create="false" delete="false" edit="false" default_order="id desc">
                                <field name="partner_id"/>
                                <field name="date_on_rent"/>
                                <field name="date_in_garage"/>
                                <field name="due_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <field name="country_id" position="after">
                    <field name="year"/>
                    <field name="mileage"/>
                </field>
                <xpath expr="//group/group" position="after">
                    <group string="Client">
                        <field name="partner_id"/>
                        <field name="due_date"/>
                        <field name="image" widget="image"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="action_car">
            <field name="name">Cars</field>
            <field name="res_model">rental.car</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_car_on_rent">
            <field name="name">Cars on Rent</field>
            <field name="res_model">rental.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_on_rent': 1,}</field>
        </record>

        <record model="ir.actions.act_window" id="action_car_in_garage">
            <field name="name">Cars in Garage</field>
            <field name="res_model">rental.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_in_garage': 1,}</field>
        </record>

        <record model="ir.actions.act_window" id="action_car_under_repair">
            <field name="name">Cars under Repair</field>
            <field name="res_model">rental.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_under_repair': 1,}</field>
        </record>

        <record model="ir.actions.act_window" id="action_car_info">
            <field name="name">Cars Info</field>
            <field name="res_model">rental.car.info</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="rental" id="menu_root">
            <menuitem name="Cars" id="cars">
                <menuitem name="All" id="menu_all_cars" action="action_car" sequence="1"/>
                <menuitem name="Cars on Rent" id="on_rent" action="action_car_on_rent" sequence="2"/>
                <menuitem name="Cars in Garage" id="in_garage" action="action_car_in_garage" sequence="3"/>
                <menuitem name="Cars under Repair" id="under_repair" action="action_car_under_repair" sequence="4"/>
            </menuitem>
            <menuitem name="Configuration" id="configuration">
                <menuitem name="Car Info" id="menu_car_info" action="action_car_info"/>
            </menuitem>
        </menuitem>

    </data>
</odoo>