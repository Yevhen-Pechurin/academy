<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="sale_product_country_of_origin" model="ir.ui.view">
        <field name="name">Product Country</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="country_of_origin"/>
            </xpath>
        </field>
   </record>

    <record id="sale_order_product_country_of_origin" model="ir.ui.view">
        <field name="name">Product Country Order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="country_of_origin"/>
            </xpath>
        </field>
   </record>
</odoo>