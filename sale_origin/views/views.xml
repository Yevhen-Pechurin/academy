<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_product_inherited" model="ir.ui.view">
            <field name="name">Product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group/group/field[@name='invoice_policy']" position="after">
                    <field name="country_of_origin"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_line" model="ir.ui.view">
            <field name="name">Product Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='name']" position="after">
                    <field name="country_of_origin"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>