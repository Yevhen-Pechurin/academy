<odoo>
    <template id="sale_order_portal_content_inherit_sale_origin" name="Order Options"
              inherit_id="sale.sale_order_portal_content">

        <xpath expr="//section[@id='details']//table[@id='sales_order_table']/thead/tr/th[contains(text(), 'Quantity')]"
               position="before">
            <th t-value="product.template.country_of_origin" class="text-right">Country Of Origin</th>
        </xpath>

        <xpath expr="//section[@id='details']//table[@id='sales_order_table']/tbody/t/tr/t/td" position="after">
            <td name="td_country" class="text-right">
                <span t-field="line.country_of_origin"/>
            </td>
        </xpath>

    </template>
</odoo>