    <menuitem name="Rent Car" id="rental_car.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Main Menu" id="rental_car.menu_1" parent="rental_car.menu_root"/>
<!--    <menuitem name="Menu 2" id="rental_car.menu_2" parent="rental_car.menu_root"/>-->

    <!-- actions -->

