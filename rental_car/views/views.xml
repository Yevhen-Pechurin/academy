        <record id="car_form_view" model="ir.ui.view">
            <field name="name">Car form view</field>
            <field name="model">rental_car.car</field>
            <field name="arch" type="xml">
                <form>
                     <header>
                         <button name="action_for_rent" string="For Rent" class="oe_highlight" type="object" attrs="{'invisible': [('status', 'in', ['for_rent', 'unavailable'])]}"/>
                         <button name="action_in_garage" string="In Garage" class="oe_highlight" type="object" attrs="{'invisible': [('status', 'in', ['in_garage', 'unavailable'])]}"/>
                         <field name="status" widget="statusbar" statusbar_visible="in_garage,for_rent,under_repair"/>
                     </header>
                    <sheet>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <div class="oe_title">
                                <label for="name"/>
                                <h1><field name="name"/></h1>
                            </div>
                        <group>
                            <group string="Info">
                                <field name="brand_id"/>
                                <field name="number"/>
                                <field name="year_of_manufacture"/>
                                <field name="odometer_value"/>
                            </group>
                            <group string="Client">
                                <field name="client_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                 <field name="description"/>
                            </page>
                            <page string="Rent History">
                                <field name="rent_history_id"  options="{'no_open': True}">
                                          <tree create="false" delete="false" edit="false" default_order="id desc">
                                                <field name="client_id"/>
                                                <field name="date_for_rent"/>
                                                <field name="date_in_garage"/>
                                                <field name="odometer_start_value"/>
                                                <field name="odometer_end_value"/>
                                                <field name="due_date"/>
                                          </tree>
                                    </field>
                              </page>
                        </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                      </div>
                </form>
            </field>
        </record>


        <record id="brand_form_view" model="ir.ui.view">
            <field name="name">Brand form view</field>
            <field name="model">rental_car.brand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group string="Info">
                            <field name="country"/>
                            <field name="model_id"/>
                        </group>
                        <notebook>
                            <page string="Brand Description">
                                 <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                      </div>
                </form>
            </field>
        </record>




        <record id = "car_tree_view" model="ir.ui.view">
            <field name="name">Car Tree View</field>
            <field name="model">rental_car.car</field>
            <field name="arch" type="xml">
                <tree string="Car">
                    <field name="name"/>
                    <field name="year_of_manufacture"/>
                    <field name="odometer_value"/>
                </tree>
            </field>
        </record>


        <menuitem id="menu_root" name="Rental Car" sequence = "14" />
        <menuitem id="cars" name = "Cars" parent = "menu_root" action="action_cars"/>
        <menuitem id="brand" name = "Brands" parent = "menu_root" action="action_brands"/>
        <menuitem id="model" name = "Models" parent = "menu_root" action="action_models"/>
    </data>
