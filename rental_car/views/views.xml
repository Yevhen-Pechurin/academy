<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="rental_car.list">
      <field name="name">rental_car list</field>
      <field name="model">rental_car.car</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="number"/>
          <field name="model"/>
        </tree>
      </field>
    </record>




    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="rental_car.action_window">
      <field name="name">Rent car lis</field>
      <field name="res_model">rental_car.car</field>
      <field name="view_mode">tree,form</field>
    </record>

  <record model="ir.ui.view" id="rental_car.car_form_view">
    <field name="name">Car</field>
    <field name="model">rental_car.car</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button string="To rent" type="object" name="action_to_rent" class="oe_highlight" attrs="{'invisible':[('status', '!=', 'available')]}"/>
<!--          <button string="To rent" type="object" name="action_to_rent" class="oe_highlight" attrs="{'visible':[('status', '=', 'available')]}"/>-->
          <button string="In Garage" type="object" name="action_in_garage" class="oe_highlight" attrs="{'invisible':[('status', '!=', 'in_rent')]}"/>
          <field name="status" widget="statusbar"/>
        </header>

        <sheet>
          <div class="oe_title">
            <h1><field name="name" placeholder="compute"/></h1>
            <group>
              <group>
<!--                <field name="name"/>-->
                <field name="model" widget="my_custom_widget"/>
<!--                <field name="model" widget="my-custom-widget"/>-->
                <field name="number"/>
              </group>
              <group>
<!--                  <field name="logo" widget="image" class="oe_avatar"/>-->
                  <field name="logo" widget="image" />
                  <field name="year_edition"/>
                  <field name="partner_id"/>
                  <field name="odometr"/>
                  <field name="active" invisible="1"/>
              </group>
            </group>
          </div>
            <notebook>
                <page string="History">
                    <field name="history_ids" options="{'no_open': True}">
                            <tree create="false" delete="false" edit="false" default_order="id desc">
                            <field name="partner_id"/>
                            <field name="date_to_rent"/>
                            <field name="date_to_return"/>
<!--                            <field name="due_date"/>-->
                            <field name="odometr"/>
                            <field name="odometr_start"/>
                            <field name="odometr_end"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </sheet>
        <div class="oe_chatter">
            <field name="message_ids" options="{'post_refresh': 'recipients'}" groups="base.group_user"/>
            <field name="message_follower_ids"/>
        </div>
      </form>
    </field>
  </record>


