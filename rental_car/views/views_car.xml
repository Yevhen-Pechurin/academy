      <field name="model_id" ref="model_rental_car_rental_car"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="Rental car" id="rental_car_menu"/>

    <!-- menu categories -->
    <menuitem name="Car Info" id="rental_car_one" parent="rental_car_menu"/>
<!--    <menuitem name="Menu 2" id="rental_car_two" parent="rental_car_menu"/>-->

    <!-- actions -->
    <menuitem name="All" id="rental_car.menu_1_list" parent="rental_car_one" action="rental_car.action_window" sequence="1"/>
    <menuitem name="In Garage" id="rental_car.menu_2_list" parent="rental_car_one" action="rental_car.action_window" sequence="2"/>
    <menuitem name="Rented" id="rental_car.menu_3_list" parent="rental_car_one" action="rental_car.action_window" sequence="3"/>
    <menuitem name="Under Repair" id="rental_car.menu_4_list" parent="rental_car_one" action="rental_car.action_window" sequence="4"/>
    <menuitem name="Unavailable" id="rental_car.menu_5_list" parent="rental_car_one" action="rental_car.action_window" sequence="5"/>

  </data>
</odoo>