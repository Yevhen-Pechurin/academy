<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rental_car.module_category" model="ir.module.category">
        <field name="name">Rental Car</field>
    </record>

    <record id="group_car_user" model="res.groups">
        <field name="name">Client</field>
        <field name="category_id" ref="rental_car.module_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_car_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="rental_car.module_category"/>
        <field name="implied_ids" eval="[(4, ref('group_car_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>
