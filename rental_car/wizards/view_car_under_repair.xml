<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.actions.act_window" id="action_car_under_repair">
        <field name="name">Under Repair</field>
        <field name="res_model">rental_car.car.under_repair</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="form_view_car_under_repair">
        <field name="name">Under Repair</field>
        <field name="model">rental_car.car.under_repair</field>
        <field name="arch" type="xml">
              <form>
                    <sheet>
                          <group>
                              <field name="repair_description"/>
                          </group>
                    </sheet>
                    <footer>
                          <button string="Under Repair" name="action_under_repair" type="object" class="oe_highlight" />
                          <button string="Cancel" class="btn btn-secondary" special="cancel" />
                    </footer>
              </form>
        </field>
      </record>

</odoo>