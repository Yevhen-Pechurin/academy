<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.actions.act_window" id="action_car_wizard_rented">
        <field name="name">Rented</field>
        <field name="res_model">wizard.car.rented</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="form_view_car_wizard_rented">
        <field name="name">Rented</field>
        <field name="model">wizard.car.rented</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="due_date"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Rented" name="action_rented" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
