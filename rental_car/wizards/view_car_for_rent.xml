<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.actions.act_window" id="action_car_for_rent">
        <field name="name">For Rent</field>
        <field name="res_model">rental_car.car.for_rent</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="form_view_car_for_rent">
        <field name="name">For Rent</field>
        <field name="model">rental_car.car.for_rent</field>
        <field name="arch" type="xml">
              <form>
                    <sheet>
                          <group>
                                <group>
                                    <field name="client_id"/>
                                </group>
                                <group>
                                    <field name="due_date"/>
                                </group>
                          </group>
                    </sheet>
                    <footer>
                          <button string="For Rent" name="action_for_rent" type="object" class="oe_highlight" />
                          <button string="Cancel" class="btn btn-secondary" special="cancel" />
                    </footer>
              </form>
        </field>
      </record>

    <record model="ir.actions.act_window" id="action_car_in_garage">
        <field name="name">In Garage</field>
        <field name="res_model">rental_car.car.for_rent</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="form_view_car_in_garage">
        <field name="name">In Garage</field>
        <field name="model">rental_car.car.for_rent</field>
        <field name="arch" type="xml">
              <form>
                    <sheet>
                          <group>
                                <group>
                                    <field name="odometer_end_value"/>
                                </group>
                          </group>
                    </sheet>
                    <footer>
                          <button string="In Garage" name="action_in_garage" type="object" class="oe_highlight" />
                          <button string="Cancel" class="btn btn-secondary" special="cancel" />
                    </footer>
              </form>
        </field>
      </record>

</odoo>