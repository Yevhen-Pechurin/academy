<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <template id="report_car_barcode_template">
            <div style="width: 32%; display: inline-table; height: 10rem;">
                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                    <tr>
<!--                        <th class="table-active text-center" style="height: 4rem;">-->
<!--&lt;!&ndash;                            <strong t-field="car.name"/>&ndash;&gt;-->
<!--                        </th>-->
                    </tr>

                        <td class="text-center align-middle" style="height: 6rem;">
                            <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', car.name, 1000, 400)" style="width:100%;height:20%;"/>
                            <p t-esc="car.name"/>
                        </td >
                        <td>
                            <ul>
                                <li t-esc="'Модель:: ' + car.name"/>
                                <li t-esc="'Год випуска: ' + str(car.year_of_manufacture)"/>
                                <li t-esc="'Одометр: ' + str(car.odometer_value)"/>
                                <li t-esc="'Статус: ' + car.status"/>
                            </ul>
                        </td>

                </table>
            </div>
        </template>
        <template id="report_car_barcode">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="car">
                        <t t-call="rental_car.report_car_barcode_template"/>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
