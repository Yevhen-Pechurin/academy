<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="zoom_info_view_partner_form_name" model="ir.ui.view">
        <field name="name">zoom.info.view.partner.form.name</field>
        <field name="model">res.partner</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="zoom_api_company_id" class="zoom_api_company_id"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="widget">field_partner_zoom_info</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='name']" position="attributes">
                <attribute name="widget">field_partner_zoom_info</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form//field[@name='function']" position="attributes">
                <attribute name="widget">field_partner_zoom_info</attribute>
            </xpath>
        </field>
    </record>

</odoo>