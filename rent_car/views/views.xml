<odoo>
    <data>
        <!-- action for all cars -->
        <record id="all_cars_action" model="ir.actions.act_window">
            <field name="name">Cars</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rent_car.car</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
        <!-- action for garage cars -->
        <record id="garage_cars_action" model="ir.actions.act_window">
            <field name="name">In The Garage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rent_car.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('status', '=', 'in_garage')]</field>
        </record>
        <!-- action for loan cars -->
        <record id="loan_cars_action" model="ir.actions.act_window">
            <field name="name">On Loan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rent_car.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('status', '=', 'in_rent')]</field>
        </record>
        <!-- action for repair cars -->
        <record id="under_repair_cars_action" model="ir.actions.act_window">
            <field name="name">Under Repair</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rent_car.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('status', '=', 'on_repair')]</field>
        </record>
        <!-- action for unavailable cars -->
        <record id="unavailable_cars_action" model="ir.actions.act_window">
            <field name="name">Unavailable</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rent_car.car</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('status', '=', 'unavailable')]</field>
        </record>

        <!-- tree view for cars -->
        <record id="cars_tree_view" model="ir.ui.view">
            <field name="name">cars.tree.view</field>
            <field name="model">rent_car.car</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="year"/>
                    <field name="model"/>
                    <field name="number"/>
                </tree>
            </field>
        </record>

        <!-- form view for cars -->
        <record id="books_form_view" model="ir.ui.view">
            <field name="name">cars.form.view</field>
            <field name="model">rent_car.car</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group string="Info">
                                <field name="model"/>
                                <field name="number"/>
                                <field name="year"/>
                                <field name="odometer"/>

                            </group>
                            <group>
                                <group string="Partner">
                                    <field name="partner_id"/>
                                </group>
                                <group string="Logo">
                                    <field
                                            name="logo"
                                            widget="image"
                                            class="oe_avatar oe_left"
                                    />
                                </group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Rent History">
                                <field name="history_rent_ids">
                                    <tree create="false" delete="false" edit="false">
                                        <field name="partner_id"/>
                                        <field name="st_odometer_value"/>
                                        <field name="fn_odometer_value"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Repair History">
                                <field name="history_repair_ids">
                                    <tree create="false" delete="false" edit="false">
                                        <field name="date_repair"/>
                                        <field name="type_repair"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- kanban view for cars-->
        <record id="books_kanban_view" model="ir.ui.view">
            <field name="name"> cars.book.kanban</field>
            <field name="model">rent_car.car</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" class="o_kanban_small_column" create="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                    <field name="year"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card d-flex flex-column"
                                 style="width:60mm; height:40mm;;">
                                <div class="oe_kanban_content flex-grow-1" style="display:flex">
                                    <div>
                                        <field
                                                name="logo"
                                                widget="image"
                                                class="oe_centered"
                                        />
                                    </div>
                                    <div style="margin-left:10px">
                                        <div class="o_kanban_record_title o_kanban_details">
                                            <strong><field name="name"></field></strong>
                                        </div>
                                        <div style="max-width:85px">
                                            <span class="o_text_overflow" t-if="record.partner_id.value"
                                                  t-esc="record.partner_id.value">
                                            </span>
                                            <p><field name="status"></field></p>
                                            <p><field name="year"></field></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>

                    </templates>
                </kanban>
            </field>
        </record>

    <!-- Top menu item -->
      <!-- car rental menues -->
        <menuitem id="car_rental_menu" name="Rental" sequence="1"/>
        <menuitem id="cars" name="Cars" parent="car_rental_menu" sequence="1"/>
  </data>
</odoo>