<odoo>
    <data>
        <record id="module_category_library" model="ir.module.category">
            <field name="name">Library</field>
        </record>

        <record id="group_library_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"></field>
        </record>

        <record id="group_library_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4,ref('group_library_user'))]"></field>
        </record>

        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4,ref('library.group_library_manager'))]"></field>
        </record>
    </data>
</odoo>