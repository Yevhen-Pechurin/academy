<odoo>
    <data>
        <record id="on_hand_form_view" model="ir.ui.view">
            <field name="name">library.info.form</field>
            <field name="model">library.wizard.on_hand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="due_date"/>
                            </group>
                        </group>
                    </sheet>
                     <footer>
                         <button name="action_on_hand" string="On Hand" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>