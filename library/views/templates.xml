<odoo>
  <template id="listing">
      <t t-call="website.layout">
          <t t-set="pageName" t-value="'homepage'"/>
          <t t-set="title" t-value="'Books'"/>
          <div id="wrap" class="oe_structure oe_empty">
              <ul class="container py-5 list-unstyled">
                  <li t-foreach="objects" t-as="object">
                      <a t-attf-href="#{ root }/book/#{ slug(object) }">
                          <t t-esc="object.title"/>
                      </a>
                  </li>
              </ul>
          </div>
      </t>
  </template>

  <template id="object">
      <t t-call="website.layout">
          <t t-set="pageName" t-value="'homepage'"/>
          <t t-set="title" t-value="'Books'"/>

          <h1 class="container py-5"><t t-esc="object.title"/></h1>
          <p class="container py-5" t-esc="object.description"/>
      </t>
  </template>
</odoo>