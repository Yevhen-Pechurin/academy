<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="partner_view_book_button">
        <field name="name">partner.view.book.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <data>
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_books" icon="fa-book" context="{'default_partner_id': active_id}">
                    <field string="Book" name="book_count" widget="statinfo"/>
                </button>
            </div>
            </data>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_view_book_button_tree">
        <field name="name">partner.view.tree.book.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
           <field name="display_name" position="after">
               <field name="book_count"/>
           </field>
        </field>
    </record>
</odoo>