<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_view_book_buttons" model="ir.ui.view">
        <field name="name">res.partner.view.book.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">

                <button class="oe_stat_button" type="object" name="action_books_count" 
                    attrs="{'invisible': [('books_count', '=', 0)]}" icon="fa-book">
                    <div class="o_stat_info">
                        <field class="o_stat_value" name="books_count" widget="statinfo"/>
                        <span class="o_stat_text" attrs="{'invisible': [('books_count', '&gt;', 1)]}"> Book</span>
                        <span class="o_stat_text" attrs="{'invisible': [('books_count', '&lt;', 2)]}"> Books</span>
                    </div>
                </button>

                <button class="oe_stat_button" type="action" name="%(view_type_action_books_count)d" 
                    attrs="{'invisible': [('books_count', '=', 0)]}" icon="fa-book">
                    <div class="o_stat_info">
                        <field class="o_stat_value" name="books_count" widget="statinfo"/>
                        <span class="o_stat_text" attrs="{'invisible': [('books_count', '&gt;', 1)]}"> Book</span>
                        <span class="o_stat_text" attrs="{'invisible': [('books_count', '&lt;', 2)]}"> Books</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_view_book_button_tree">
        <field name="name">partner.view.tree.book.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="books_count"/>
            </field>
        </field>
    </record>

</odoo>