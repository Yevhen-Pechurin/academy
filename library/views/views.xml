<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="library.books_list">
      <field name="name">library list</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="author_id"/>
          <field name="year_of_edition"/>
          <field name="editor"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="library.all_books_list">
      <field name="name">Library, Books List</field>
      <field name="res_model">library.book</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <record model="ir.ui.view" id="library.book_form_view">
      <field name="name">Library, Book form</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button string="On Hand"  name="action_on_hand" class="oe_highlight"  type="object"/>
<!--            <button string="On Hand2"  name="%(library.wizard_on_hand_view)d" class="oe_highlight"  type="action"/>-->
            <button string="Done" name="action_done" type="object"/>
            <field name="status" widget="statusbar"/>
          </header>

          <sheet>
            <div class="oe_title">
              <label for="name"/>
              <h1><field name="name" placeholder="Name of book"/></h1>
              <group>
                <group>
                  <field name="editor"/>
                  <field name="author_id"/>
                  <field name="year_of_edition"/>
                </group>
                <group>
<!--                  <field name="partner_id"/>-->
<!--                  <field name="tag_ids" widget="many2many_tags"/>-->
                  <field name="tag_ids" widget="many2many_tags"/>
                  <field name="image"/>
                </group>
              </group>
            </div>




            <notebook>
              <page string="Description">
                <field name="description"/>
              </page>

            </notebook>
          </sheet>
            <div class="oe_chatter">
            <field name="message_ids" options="{'post_refresh': 'recipients'}" groups="base.group_user"/>
            <field name="message_follower_ids"/>

            </div>
        </form>
      </field>
    </record>




    <!-- se rver action to the one above -->

<!--    <record model="ir.actions.server" id="library.action_server">-->
<!--      <field name="name">library server</field>-->
<!--      <field name="model_id" ref="model_library_library"/>-->
