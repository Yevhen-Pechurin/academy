<!--      <field name="code">-->
<!--        action = {-->
<!--          "type": "ir.actions.act_window",-->
<!--          "view_mode": "tree,form",-->
<!--          "res_model": model._name,-->
<!--        }-->
<!--      </field>-->
<!--    </record>-->

    <record model="ir.actions.act_window" id="library.action_book">
        <field name="name">Library windiw</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>


    <record model="ir.actions.act_window" id="library.action_configuration">
        <field name="name">Library windiw</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>


    <!-- Top menu item -->
    <menuitem name="library" id="library.menu_root"/>
<!--     menu categories-->

    <menuitem name="Books" id="library.books" parent="library.menu_root"/>
    <menuitem name="Configuration" id="library.configuration" parent="library.menu_root"/>

    <!-- actions -->

    <menuitem name="All Books" id="library.menu_1_list" parent="library.books"
              action="library.all_books_list"/>
    <menuitem name="Books on shelf" id="library.books_on_shelf" parent="library.books"
              action="library.action_book"/>
    <menuitem name="Books on hand" id="library.books_on_hand" parent="library.books"
              action="library.action_book"/>
    <menuitem name="for config" id="library.for_config" parent="library.configuration"
              action="library.action_configuration"/>
  </data>
</odoo>