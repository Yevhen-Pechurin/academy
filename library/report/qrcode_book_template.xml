<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_booklabel">
        <table>
            <tr>
                <td class="text-center allign-middle table table-bordered mb-0" style="border: 1px solid black;">
                    <t t-if="book.number">
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', book.name, 200, 200)"
                             alt="Barcode"/>
                        <div t-field="book.number"/>

                    </t>
                    <t t-else="">
                        <span class="text-muted">No qrcode available</span>
                    </t>
                </td>
            </tr>
        </table>

    </template>

    <template id="report_qrcode_book">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="book">
                    <t t-call="library.report_booklabel"/>
                </t>
            </div>
        </t>
    </template>

</odoo>